{
  "files": ["index.js"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.intl",
      "esnext.symbol"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "skipDefaultLibCheck": true
  }
}